    <script>
        // Initialize AOS
        AOS.init({
            duration: 1000,
            once: true,
            easing: 'ease-out-cubic',
            offset: 100
        });
        
        // Initialize Feather Icons
        feather.replace();
        
        // MINIMAL CHRISTMAS DECORATIONS
        function createSnowflakes() {
            const container = document.getElementById('snowflakes-container');
            const snowflakeCount = 50;
            
            for (let i = 0; i < snowflakeCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.className = 'snowflake';
                
                // Random properties
                const size = Math.random() * 6 + 3;
                const posX = Math.random() * 100;
                const duration = 5 + Math.random() * 10;
                const delay = Math.random() * 10;
                const opacity = 0.5 + Math.random() * 0.5;
                
                snowflake.style.width = `${size}px`;
                snowflake.style.height = `${size}px`;
                snowflake.style.left = `${posX}%`;
                snowflake.style.opacity = opacity;
                snowflake.style.animationDuration = `${duration}s`;
                snowflake.style.animationDelay = `${delay}s`;
                
                container.appendChild(snowflake);
            }
        }
        
        function createChristmasLights() {
            const container = document.getElementById('christmas-lights');
            const lightCount = 20;
            
            const colors = ['#dc2626', '#16a34a', '#fbbf24', '#ffffff'];
            
            for (let i = 0; i < lightCount; i++) {
                const light = document.createElement('div');
                light.className = 'christmas-light';
                
                // Random properties
                const posX = Math.random() * 100;
                const posY = Math.random() * 100;
                const color = colors[Math.floor(Math.random() * colors.length)];
                const delay = Math.random() * 2;
                
                light.style.left = `${posX}%`;
                light.style.top = `${posY}%`;
                light.style.backgroundColor = color;
                light.style.animationDelay = `${delay}s`;
                light.style.boxShadow = `0 0 8px ${color}`;
                
                container.appendChild(light);
            }
        }
        
        function addChristmasHatsToCards() {
            const nameCards = document.querySelectorAll('.name-card');
            nameCards.forEach(card => {
                const hat = document.createElement('div');
                hat.className = 'christmas-hat';
                card.appendChild(hat);
            });
        }
        
        // Function to play music automatically
        function playBackgroundMusic() {
            const backgroundMusic = document.getElementById('background-music');
            if (backgroundMusic) {
                // Set music to play automatically
                backgroundMusic.volume = 0.3;
                
                // Modern browsers require user interaction for audio
                // We'll play it after a user interaction (loading screen click)
                document.addEventListener('click', function initAudio() {
                    backgroundMusic.play().then(() => {
                        console.log("Music started playing automatically");
                        // Update music button icon
                        const musicIcon = document.querySelector('#musicToggle i');
                        if (musicIcon) {
                            musicIcon.classList.remove('fa-volume-mute');
                            musicIcon.classList.add('fa-volume-up');
                        }
                    }).catch(e => {
                        console.log("Auto-play prevented, waiting for user interaction");
                    });
                    
                    // Remove the event listener after first click
                    document.removeEventListener('click', initAudio);
                }, { once: true });
            }
        }
        
        // Loading screen functionality
        window.addEventListener('load', function() {
            // Create minimal Christmas decorations
            createSnowflakes();
            createChristmasLights();
            
            // Start playing background music
            playBackgroundMusic();
            
            // Hide loading screen after page is fully loaded
            setTimeout(function() {
                const loadingScreen = document.getElementById('loading-screen');
                loadingScreen.style.opacity = '0';
                setTimeout(function() {
                    loadingScreen.style.display = 'none';
                    
                    // Add Christmas hats to cards after loading
                    setTimeout(addChristmasHatsToCards, 500);
                    
                }, 500);
            }, 1000);
        });
        
        // Names array with descriptions
        const names = [
            { name: "Ali", description: "<i class=\"fa-solid fa-robot\"></i> Ali is a real powerful AI we call him (AliGpt)" },
            { name: "Farhad", description: "<i class=\"fa-solid fa-palette\"></i> Judo (The Host)" },
